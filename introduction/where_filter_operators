/* =========================================================
   DATASET USED: employees
   TOPIC: WHERE Clause â€“ From Beginner to Advanced
   ========================================================= */

/* ---------------------------------------------------------
   1ï¸âƒ£ COMPARISON OPERATORS
   --------------------------------------------------------- */

-- Q1: Find employees whose salary is greater than 50,000
SELECT *
FROM employees
WHERE salary > 50000;

-- Q2: Display employees whose age is less than 30
SELECT *
FROM employees
WHERE age < 30;

-- Q3: Get employees whose department is IT
SELECT *
FROM employees
WHERE department = 'IT';

-- Q4: List employees whose salary is not equal to 60,000
SELECT *
FROM employees
WHERE salary <> 60000;

-- Q5: Find employees who joined before 2021
SELECT *
FROM employees
WHERE join_date < '2021-01-01';


/* ---------------------------------------------------------
   2ï¸âƒ£ LOGICAL OPERATORS (AND, OR, NOT)
   --------------------------------------------------------- */

-- Q1: Employees in IT department AND salary > 70,000
SELECT *
FROM employees
WHERE department = 'IT'
AND salary > 70000;

-- Q2: Employees from HR OR Sales
SELECT *
FROM employees
WHERE department = 'HR'
OR department = 'Sales';

-- Q3: Employees whose age > 25 AND city is Hyderabad
SELECT *
FROM employees
WHERE age > 25
AND city = 'Hyderabad';

-- Q4: Employees who are NOT from IT department
SELECT *
FROM employees
WHERE NOT department = 'IT';

-- Q5: Employees with salary > 60,000 AND age < 35
SELECT *
FROM employees
WHERE salary > 60000
AND age < 35;


/* ---------------------------------------------------------
   3ï¸âƒ£ RANGE OPERATORS (BETWEEN)
   --------------------------------------------------------- */

-- Q1: Employees whose salary is between 45,000 and 70,000
SELECT *
FROM employees
WHERE salary BETWEEN 45000 AND 70000;

-- Q2: Employees whose age is between 25 and 30
SELECT *
FROM employees
WHERE age BETWEEN 25 AND 30;

-- Q3: Employees who joined between 2021 and 2022
SELECT *
FROM employees
WHERE join_date BETWEEN '2021-01-01' AND '2022-12-31';

-- Q4: Employees whose salary is NOT between 50,000 and 80,000
SELECT *
FROM employees
WHERE salary NOT BETWEEN 50000 AND 80000;

-- Q5: Employees aged between 30 and 40 AND salary > 60,000
SELECT *
FROM employees
WHERE age BETWEEN 30 AND 40
AND salary > 60000;


/* ---------------------------------------------------------
   4ï¸âƒ£ MEMBERSHIP OPERATORS (IN, NOT IN)
   --------------------------------------------------------- */

-- Q1: Employees from IT, HR, or Finance
SELECT *
FROM employees
WHERE department IN ('IT', 'HR', 'Finance');

-- Q2: Employees whose city is Mumbai or Delhi
SELECT *
FROM employees
WHERE city IN ('Mumbai', 'Delhi');

-- Q3: Employees NOT from IT or Sales
SELECT *
FROM employees
WHERE department NOT IN ('IT', 'Sales');

-- Q4: Employees whose salary is 40k, 50k, or 60k
SELECT *
FROM employees
WHERE salary IN (40000, 50000, 60000);

-- Q5: Employees from Bangalore or Hyderabad
--     AND department is IT or Sales
SELECT *
FROM employees
WHERE city IN ('Bangalore', 'Hyderabad')
AND department IN ('IT', 'Sales');


/* ---------------------------------------------------------
   5ï¸âƒ£ SEARCH OPERATORS (LIKE, NOT LIKE)
   --------------------------------------------------------- */

-- Q1: Employees whose name starts with 'A'
SELECT *
FROM employees
WHERE name LIKE 'A%';

-- Q2: Employees whose name ends with 'a'
SELECT *
FROM employees
WHERE name LIKE '%a';

-- Q3: Employees whose name contains 'oo'
SELECT *
FROM employees
WHERE name LIKE '%oo%';

-- Q4: Employees whose name has exactly 5 characters
SELECT *
FROM employees
WHERE name LIKE '_____';

-- Q5: Employees whose name does NOT start with 'R'
SELECT *
FROM employees
WHERE name NOT LIKE 'R%';


/* ---------------------------------------------------------
   ðŸš€ ADVANCED MIX (INTERVIEW LEVEL)
   --------------------------------------------------------- */

-- Q1: Employees from IT or Finance with salary > 65,000
SELECT *
FROM employees
WHERE department IN ('IT', 'Finance')
AND salary > 65000;

-- Q2: Employees who joined after 2021 and city is not Mumbai
SELECT *
FROM employees
WHERE join_date > '2021-12-31'
AND city <> 'Mumbai';

-- Q3: Employees whose name starts with 'P'
--     AND salary between 40,000 and 60,000
SELECT *
FROM employees
WHERE name LIKE 'P%'
AND salary BETWEEN 40000 AND 60000;

-- Q4: Employees from HR or Sales AND age < 30
SELECT *
FROM employees
WHERE department IN ('HR', 'Sales')
AND age < 30;

-- Q5: Employees NOT from IT whose salary > 50,000
SELECT *
FROM employees
WHERE department <> 'IT'
AND salary > 50000;

